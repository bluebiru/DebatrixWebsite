{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "./nixpacks.toml",
    "buildCommand": "npm run build",
    "startCommand": "npm start",
    "envVars": {
      "NODE_ENV": "production",
      "PORT": "3000"
    },
    "engines": {
      "node": "20.x"
    }
  },
  "deploy": {
    "provider": "RAILWAY",
    "project": "nama-project-railway-kamu",
    "domain": "custom-domain.com",
    "rootDir": "."
  }
}
